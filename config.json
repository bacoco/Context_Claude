{
  "framework": {
    "name": "Enhanced Context Engineering Framework",
    "version": "1.0.0",
    "description": "Systematic AI-assisted software development framework"
  },
  "validation": {
    "level": "comprehensive",
    "test_coverage_minimum": 85,
    "security_scan_required": true,
    "performance_benchmarks": true,
    "documentation_required": true
  },
  "thinking": {
    "depth": "adaptive",
    "min_thoughts": 5,
    "max_thoughts": 25,
    "revision_enabled": true,
    "branching_enabled": true
  },
  "quality_gates": {
    "pre_implementation": {
      "requirements_validated": true,
      "reproduction_case_created": true,
      "test_plan_defined": true
    },
    "implementation": {
      "code_style_check": true,
      "type_hints_required": true,
      "error_handling_required": true,
      "documentation_required": true
    },
    "post_implementation": {
      "all_tests_pass": true,
      "no_linting_errors": true,
      "security_scan_clean": true,
      "performance_acceptable": true,
      "documentation_updated": true
    }
  },
  "tools": {
    "file_editor": {
      "exact_match_required": true,
      "context_validation": true,
      "backup_enabled": true
    },
    "bash_commands": {
      "timeout_seconds": 300,
      "error_handling": true,
      "output_limits": true
    },
    "testing": {
      "framework": "pytest",
      "coverage_tool": "pytest-cov",
      "min_coverage": 85,
      "parallel_execution": true
    }
  },
  "presets": {
    "basic": {
      "commands": ["analyze-issue", "implement-feature"],
      "validation_level": "standard",
      "thinking_depth": "moderate"
    },
    "comprehensive": {
      "commands": ["analyze-issue", "deep-research", "implement-feature", "comprehensive-test", "quality-review"],
      "validation_level": "comprehensive",
      "thinking_depth": "deep"
    },
    "research": {
      "commands": ["deep-research", "documentation-scan", "pattern-analysis"],
      "validation_level": "analysis",
      "thinking_depth": "deep"
    },
    "validation": {
      "commands": ["comprehensive-test", "regression-check", "security-audit"],
      "validation_level": "strict",
      "thinking_depth": "moderate"
    }
  },
  "workflow": {
    "session_management": {
      "auto_checkpoint": true,
      "progress_tracking": true,
      "state_persistence": true
    },
    "task_completion": {
      "verification_required": true,
      "checklist_mandatory": true,
      "quality_score_minimum": 90
    },
    "documentation": {
      "auto_generate": true,
      "version_control": true,
      "templates_enabled": true
    }
  },
  "integration": {
    "version_control": {
      "system": "git",
      "auto_commit": false,
      "branch_protection": true
    },
    "ci_cd": {
      "enabled": true,
      "platforms": ["github-actions", "gitlab-ci"],
      "auto_deploy": false
    },
    "monitoring": {
      "performance_tracking": true,
      "error_reporting": true,
      "usage_analytics": true
    }
  },
  "security": {
    "secrets_management": {
      "env_file_required": true,
      "secret_scanning": true,
      "key_rotation": true
    },
    "vulnerability_scanning": {
      "dependency_check": true,
      "code_analysis": true,
      "container_scanning": true
    },
    "compliance": {
      "standards": ["OWASP", "NIST"],
      "audit_trail": true,
      "access_control": true
    }
  },
  "performance": {
    "benchmarking": {
      "enabled": true,
      "baseline_required": true,
      "regression_detection": true
    },
    "optimization": {
      "code_profiling": true,
      "memory_analysis": true,
      "query_optimization": true
    },
    "monitoring": {
      "resource_usage": true,
      "response_times": true,
      "error_rates": true
    }
  },
  "customization": {
    "project_specific": {
      "config_override": true,
      "custom_commands": true,
      "template_customization": true
    },
    "team_preferences": {
      "coding_standards": "configurable",
      "review_processes": "customizable",
      "notification_settings": "flexible"
    }
  }
}